@using Blog_System.ViewModel
@model PostDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="post-details">
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.CreatedAt)
        </dd>
    </dl>
</div>

<div class="comments-section">
    <h4>Comments</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Content</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model.Post.Comments)
            {
                <tr class="comment-row">
                    <td>@Html.DisplayFor(modelItem => comment.Author)</td>
                    <td>@Html.DisplayFor(modelItem => comment.Content)</td>
                    <td>@Html.DisplayFor(modelItem => comment.CreatedAt)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="add-comment">
    <h4>Add a Comment</h4>
    <hr />
    <form id="comment-form">
        <div class="form-group">
            <label for="author" class="control-label">Author</label>
            <input id="author" class="form-control"></input>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="content" class="control-label">Content</label>
            <textarea id="content" class="form-control"></textarea>
            <span class="text-danger"></span>
        </div>
        <input type="hidden" id="postId" value="@Model.Post.Id" />
        <div class="form-group">
            <input type="submit" value="Add Comment" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="post-actions">
    <a asp-action="Edit" asp-route-id="@Model.Post.Id" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#comment-form').submit(function (e) {
                e.preventDefault();
                var postId = $('#postId').val();
                var author = $('#author').val();
                var content = $('#content').val();

                var formData = {
                    PostId: postId,
                    Author: author,
                    Content: content
                };

                var jsonData = JSON.stringify(formData);

                $.ajax({
                    type: 'POST',
                    url: '/Comment/Create',
                    contentType: 'application/json',
                    data: jsonData,
                    success: function (response) {
                        $('.comments-section tbody').append(response);
                        $('author').val('')
                        $('#content').val('');
                    },
                    error: function (xhr, status, error) {
                        console.error("Error: " + error);
                        console.error("Response: " + xhr.responseText);
                    }
                });
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
